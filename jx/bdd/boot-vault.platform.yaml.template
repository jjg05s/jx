# override the build pod images
jenkins:
  Agent:
    PodTemplates:
      Maven:
        Containers:
          Maven:
            Image: ghcr.io/jenkins-x/builder-maven:$VERSION
      Nodejs:
        Containers:
          Nodejs:
            Image: ghcr.io/jenkins-x/builder-nodejs:$VERSION
      Go:
        Containers:
          Go:
            Image: ghcr.io/jenkins-x/builder-go:$VERSION

{{- if eq .Requirements.webhook "lighthouse" }}
controllerbuild:
  enabled: true
  args:
  - "controller"
  - "build"
  - "--git-reporting"
  - "--batch-mode"
  - "--git-credentials"
  - "--verbose"
  image:
    repository: ghcr.io/jenkins-x/builder-go
    tag: $VERSION
{{- else }}
controllerbuild:
  enabled: true
  args:
  - "controller"
  - "build"
  - "--batch-mode"
  - "--verbose"
  image:
    repository: ghcr.io/jenkins-x/builder-go
    tag: $VERSION
{{- end }}

